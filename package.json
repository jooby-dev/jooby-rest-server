{
    "name": "jooby-rest",
    "version": "0.0.1",
    "type": "module",
    "description": "",
    "author": "",
    "scripts": {
        "lint": "eslint .",
        "api:serve": "redocly serve --watch ./api/openapi.yaml -p 3030 --ssr",
        "api:build": "redocly bundle ./api/openapi.yaml",
        "api:build-docs": "redocly build-docs ./api/openapi.yaml -o ./api/index.html",
        "develop": "NODE_ENV=develop LOG_LEVEL=trace nodemon --ignore ./api/ ./src/index.js",
        "develop:inspect": "NODE_ENV=develop node --inspect ./src/index.js",
        "start": "node ./src/index.js",
        "start:develop": "npm run api:serve & npm run develop"
    },
    "devDependencies": {
        "eslint": "^8.51.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.28.1",
        "nodemon": "^3.0.1",
        "@redocly/cli": "^1.7.0"
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "fastify": "^4.13.0",
        "fastify-plugin": "^4.5.0",
        "fastify-print-routes": "^3.1.1",
        "jooby-codec": "^3.11.0",
        "pino-pretty": "^10.2.0"
    },
    "keywords": []
}
